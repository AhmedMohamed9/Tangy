@model Tangy.Models.ViewModels.SubcategoryViewModel
@{
    ViewData["Title"] = "create";
}
<br />
<partial name="_statusMessage" model="Model.StatusMessage" />
<h2 class="text-info">create Category</h2>
<br />
<hr />
<div class="row">
    <div class="col-8">
        <form asp-action="create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="subCategory.Name" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="subCategory.Name" class="form-control" />
                </div>
                <span asp-validation-for="subCategory.Name" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="subCategory.Categoryid" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <select asp-for="subCategory.Categoryid" class="form-control"
                            asp-items="@(new SelectList (Model.categorieslist,"id","name"))"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="isnew" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="isnew" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-3"></div>
                <div class="col-5">
                    <input type="submit" class="btn btn-primary" value="Create" />
                    <a asp-action="index" class="btn btn-success">Back To List</a>
                </div>
            </div>
            x
        </form>
    </div>
    <div class="col-4">
        @if (Model.subcategorylist.Count() > 0)
        {
            <p>Existing subCategories :</p>
            <ul class="list-group">
                @foreach(var item in Model.subcategorylist)
                {
                    <li class="list-group-item">@item</li>
                }
            </ul>
        }
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

