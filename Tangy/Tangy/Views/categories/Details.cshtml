@model Tangy.Models.category

@{
    ViewData["Title"] = "Details";
}
<br />
<h2 class="text-info ">Category Type Details</h2>
<br />
<div class="form-border">
    <fieldset disabled>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="name" class="custom-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DisplayName" class="custom-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="DisplayName" class="form-control" />
            </div>
        </div>
    </fieldset>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-success">Edit</a> |
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>
</div>

